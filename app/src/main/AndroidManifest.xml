<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.contreras.poketinder">
    <uses-permission android:name="android.permission.INTERNET" />
    <application
        android:allowBackup="true"
        android:name=".PokeTinderNewApp"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.PokeTinderNew">
        <activity
            android:name="com.contreras.poketinder.ui.view.RegisterActivity"
            android:exported="false"
            />
        <activity
            android:name=".ui.view.PokemonDetailActivity"
            android:exported="false"
            />

        <activity
            android:name="com.contreras.poketinder.ui.view.LoginActivity"
            android:exported="false" />
        <activity
            android:name="com.contreras.poketinder.ui.view.OnboardingActivity"
            android:exported="false" />
        <activity
            android:name="com.contreras.poketinder.ui.view.SplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.contreras.poketinder.ui.view.MainActivity"
            android:exported="true"/>
    </application>
</manifest>
